<%= simple_form_for @post do |f| %>
<form role="form">
  <div class="row">
    <div class="form-group col-lg-8">
      <%= f.input :title, class: "form-control", label: "Title" %>
    </div>
    <div class="form-group col-lg-4">
      <%= f.input :date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%B %d, %Y') }, label: "Date" %>
    </div>
    <div class="clearfix"></div>
    <div class="form-group col-lg-12">
      <label>Message</label>
      <%= f.text_area :body, class: "form-control", rows: "6" %>
    </div>
    <div class="form-group col-lg-12">
      <%= f.input :tag_list, class: "form-control", label: "Tags" %>
    </div>
    <div class="form-group col-lg-12">
      <input type="hidden" name="save" value="contact">
      <button type="submit" class="btn btn-default">Post</button>
    </div>
  </div>
  <% end %>
</form>
