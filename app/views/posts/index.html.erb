    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Company
                    <strong>blog</strong>
                </h2>
                <hr>
            </div>
            <% if @posts.any? %>
              <% @posts.each do |post| %>
              <div class="col-lg-12 text-center">
                  <img class="img-responsive img-border img-full" src="<%= asset_path('slide-1.jpg') %>" alt="">
                  <h2><%= post.title %>
                      <br>
                      <small><%= post.date.strftime("%B %d, %Y") %></small>
                  </h2>
                  <p><%= truncate post.body, length: 160 %></p>
                  <p>Tags: <%= post.tag_list %></p>
                  <%= link_to "Read More", post_path(post), class: "btn btn-default btn-lg" %>
                  <hr>
              <% end %>
              </div>
            <% end %>

            <div class="col-lg-12 text-center">
                <ul class="pager">
                    <li class="next"><%= link_to_next_page @posts, "Newer \u2192" %></li>
                    <li class="previous"><%= link_to_previous_page @posts, "\u2190 Older" %></li>
                </ul>
            </div>
        </div>
    </div>

</div>
